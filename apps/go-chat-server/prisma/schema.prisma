datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ChatRoom {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  messages  Message[]
  name      String?
  updatedAt DateTime  @updatedAt
}

model Message {
  chatRoom   ChatRoom? @relation(fields: [chatRoomId], references: [id])
  chatRoomId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  sender     String?
  updatedAt  DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
